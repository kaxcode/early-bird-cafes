.container
  .row
    .col-xs-4.col-sm-4.col-md-4.col-sm-offset-1.col-md-offset-1
      .panel.panel.default
        = link_to shops_path, class: 'btn btn-primary' do
          Back
        .panel-heading.text-center.style-show-text
          =@shop.name
        .ul.list-group.center.style-show-text
          .li.list-group-item
            Address:
            =@shop.address
          .li.list-group-item.style-show-text
            Website:
            =@shop.website
          .li.list-group-item.style-show-text
            Hours:
            =@shop.hours
          .li.list-group-item.style-show-text
            Phone Number:
            =@shop.phone_number
          .li.list-group-item.style-show-text
            Price:
            = price_as_symbol(@shop.price)
    .col-xs-6.col-sm-6.col-md-6
      .img-thumbnail{:style => "border:none; background:white;"}
        .image-container.img
        = image_tag attachment_url(@shop, :cafe_image), size: "400x300"
