= form_for @shop, html: { class: "form-horizontal", role: "form" } do |f|
  -if @shop.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@shop.errors.count, "error")} prohibited this shop from being saved:"

      %ul
        - @shop.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :address, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :address, class: 'form-control'
  .form-group
    = f.label :website, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :website, class: 'form-control'
  .form-group
    = f.label :hours, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :hours, class: 'form-control'
  .form-group
    = f.label :phone_number, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :phone_number, class: 'form-control'
  .form-group
    = f.label :price, options_for_select(Shop::PRICES, @shop.price), class: 'form-control'
    .col-sm-10
      = f.number_field :price, class: 'form-control'
  .form-group
    = f.label :cafe_image, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.attachment_field :cafe_image
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
