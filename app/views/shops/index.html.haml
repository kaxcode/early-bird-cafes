.page-header
  = link_to new_shop_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Shop
  %h1 Listing shops

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Address
        %th Website
        %th Hours
        %th Phone number
        %th Price
        %th User
        %th{colspan: 3}

    %tbody
      - @shops.each do |shop|
        %tr
          %td= shop.name
          %td= shop.address
          %td= shop.website
          %td= shop.hours
          %td= shop.phone_number
          %td= shop.price
          %td= shop.user
          %td
            = link_to shop do
              %span.glyphicon.glyphicon-ok
          %td
            = link_to edit_shop_path(shop) do
              %span.glyphicon.glyphicon-pencil
          %td
            = link_to shop, data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-remove
